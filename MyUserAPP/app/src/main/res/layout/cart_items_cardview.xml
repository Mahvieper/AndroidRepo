<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="@dimen/dummy_img_width"
        android:layout_height="@dimen/dummy_img_height" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/cart_image"
        android:layout_toRightOf="@+id/cart_image"
        android:padding="@dimen/subtitle_padding"
        android:textSize="@dimen/subtitle_txtsize" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/cart_image"
        android:padding="@dimen/dummy_user_title_padding"
        android:textSize="@dimen/dummy_user_txtsize" />

    <TextView
        android:id="@+id/cart_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/product_price"
        android:layout_toRightOf="@+id/cart_image"
        android:padding="@dimen/dummy_user_title_padding"
        android:textSize="10sp" />



    </RelativeLayout>
